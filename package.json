{
  "name": "@dassie/root",
  "version": "1.0.0",
  "description": "Root package of the Dassie monorepo",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "clean": "pnpm -r clean",
    "build": "pnpm -r build",
    "start": "vite-node --watch --config packages/app-dev/vite.backend.config.js packages/app-dev/bin/start-development-server.ts",
    "test": "vitest",
    "prettier": "prettier --config .prettierrc.json --write \"packages/*/{src,test}/**/*.ts\"",
    "lint": "eslint \"packages/*/{src,test}/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "api": "vite-node scripts/extract-apis.ts",
    "web": "pnpm --filter=app-website dev"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/justmoon/dassie.git"
  },
  "keywords": [
    "interledger",
    "ilp",
    "dassie",
    "network",
    "monorepo",
    "p2p",
    "money"
  ],
  "author": "Stefan Thomas <stefan@interledger.org>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/justmoon/dassie/issues"
  },
  "homepage": "https://github.com/justmoon/dassie#readme",
  "dependencies": {
    "@microsoft/api-extractor": "^7.34.4",
    "@microsoft/api-extractor-model": "^7.26.4",
    "@trivago/prettier-plugin-sort-imports": "^4.1.1",
    "@tsconfig/recommended": "^1.0.2",
    "@tsconfig/strictest": "^1.0.2",
    "@types/node": "^18.14.6",
    "@typescript-eslint/eslint-plugin": "^5.54.1",
    "@typescript-eslint/parser": "^5.54.1",
    "esbuild": "^0.17.11",
    "eslint": "^8.35.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-plugin-tsdoc": "^0.2.17",
    "eslint-plugin-unicorn": "^46.0.0",
    "picocolors": "^1.0.0",
    "prettier": "^2.8.4",
    "rimraf": "^4.4.0",
    "rollup": "^3.18.0",
    "rollup-plugin-dts": "^5.2.0",
    "rollup-plugin-esbuild": "^5.0.0",
    "rollup-plugin-hashbang": "^3.0.0",
    "ts-essentials": "^9.3.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.9.5",
    "vite": "^4.1.4",
    "vite-node": "^0.29.2",
    "vitest": "^0.29.2",
    "wasm-pack": "^0.10.3",
    "zod": "^3.21.4",
    "zx": "^7.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "c8": "^7.13.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@vue/compiler-sfc"
      ]
    }
  }
}
