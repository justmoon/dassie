{
  "name": "@dassie/root",
  "version": "1.0.0",
  "description": "Root package of the Dassie monorepo",
  "scripts": {
    "clean": "pnpm -r clean",
    "build": "pnpm -r build",
    "start": "vite-node --watch --config packages/app-dev/vite.backend.config.js packages/app-dev/bin/start-development-server.ts",
    "test": "vitest",
    "prettier": "prettier --config .prettierrc.json --write \"packages/*/{src,test}/**/*.ts\"",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck",
    "api": "vite-node scripts/extract-apis.ts",
    "web": "pnpm --filter=app-website dev"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/justmoon/dassie.git"
  },
  "keywords": [
    "interledger",
    "ilp",
    "dassie",
    "network",
    "monorepo",
    "p2p",
    "money"
  ],
  "author": "Stefan Thomas <stefan@interledger.org>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/justmoon/dassie/issues"
  },
  "homepage": "https://github.com/justmoon/dassie#readme",
  "dependencies": {
    "@microsoft/api-extractor": "^7.36.0",
    "@microsoft/api-extractor-model": "^7.27.3",
    "@trivago/prettier-plugin-sort-imports": "^4.1.1",
    "@types/node": "^20.3.2",
    "esbuild": "^0.18.10",
    "prettier": "^2.8.8",
    "rimraf": "^5.0.1",
    "ts-essentials": "^9.3.2",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.3",
    "vite": "^4.3.9",
    "vite-node": "^0.31.1",
    "vitest": "^0.32.2",
    "zod": "^3.21.4",
    "zx": "^7.2.2"
  },
  "devDependencies": {
    "@types/react": "^18.2.14",
    "@types/react-dom": "^18.2.6",
    "eslint": "^8.43.0",
    "turbo": "^1.10.6"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@vue/compiler-sfc"
      ]
    }
  }
}
